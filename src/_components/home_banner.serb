<home-banner class="my-4 bg-white shadow rounded border border-slate-300 flex flex-col-reverse md:flex-row items-center md:items-start p-8 gap-10">
  <div>
    <img src="images/{{ @icon }}" class="w-full max-w-xs" alt="{{ @alt }}">
  </div>
  <div class="grow basis-2/3">
    <h2 class="mt-1 font-semibold">{{ @title }}</h2>
    <p class="text-xl">{{ @text }}</p>
  </div>
</home-banner>
